<selector xmlns:android="http://schemas.android.com/apk/res/android">
   	 <!-- pressed -->
	<item android:state_pressed="true">
	    <shape>
			<stroke 
			    android:width="1dp" 
			    android:color="@color/button_stroke"/>
			<padding 
			    android:left="10dp"
			    android:right="10dp"
			    android:top="10dp"
			    android:bottom="10dp"/>
			<solid android:color="@color/button_select"/>
		</shape>
	</item>
	<!-- focused -->
     <item android:state_focused="true"> 
          <shape>
			<stroke 
			    android:width="1dp" 
			    android:color="@color/button_stroke"/>
			<padding 
			    android:left="10dp"
			    android:right="10dp"
			    android:top="10dp"
			    android:bottom="10dp"/>
			<solid android:color="@color/button_select"/>
		</shape>
	 </item>
     <item>
		<shape>
			<stroke 
			    android:width="1dp" 
			    android:color="@color/button_stroke"/>
			<padding 
			    android:left="10dp"
			    android:right="10dp"
			    android:top="10dp"
			    android:bottom="10dp"/>
			<solid android:color="@color/button"/>
		</shape>
     </item>
</selector>
