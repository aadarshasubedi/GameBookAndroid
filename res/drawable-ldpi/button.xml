<selector xmlns:android="http://schemas.android.com/apk/res/android">
   	 <!-- pressed -->
	<item android:state_pressed="true">
	    <shape>
			<stroke 
			    android:width="1dp" 
			    android:color="#505050"/>
			<corners 
			    android:radius="7dp" />
			<padding 
			    android:left="10dp"
			    android:right="10dp"
			    android:top="10dp"
			    android:bottom="10dp"/>
			<solid android:color="#99c8b179"/>
		</shape>
	</item>
	<!-- focused -->
     <item android:state_focused="true"> 
          <shape>
			<stroke 
			    android:width="1dp" 
			    android:color="#505050"/>
			<corners 
			    android:radius="7dp" />
			<padding 
			    android:left="10dp"
			    android:right="10dp"
			    android:top="10dp"
			    android:bottom="10dp"/>
			<solid android:color="#99bc9e56"/>
		</shape>
	 </item>
     <item>
		<shape>
			<stroke 
			    android:width="1dp" 
			    android:color="#505050"/>
			<corners 
			    android:radius="7dp" />
			<padding 
			    android:left="10dp"
			    android:right="10dp"
			    android:top="10dp"
			    android:bottom="10dp"/>
			<solid android:color="#99505050"/>
		</shape>
     </item>
</selector>
