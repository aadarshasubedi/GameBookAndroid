<selector xmlns:android="http://schemas.android.com/apk/res/android">
   	 <!-- pressed -->
	<item android:state_pressed="true">
	    <shape>
			<stroke 
			    android:width="1dp" 
			    android:color="@color/button_stroke"/>
			<corners 
			    android:radius="7dp" />
			<padding 
			    android:left="1dp"
			    android:right="1dp"
			    android:top="1dp"
			    android:bottom="1dp"/>
			<solid android:color="@color/button_select"/>
		</shape>
	</item>
	<!-- focused -->
     <item android:state_focused="true"> 
          <shape>
			<stroke 
			    android:width="1dp" 
			    android:color="@color/button_stroke"/>
			<corners 
			    android:radius="7dp" />
			<padding 
			    android:left="1dp"
			    android:right="1dp"
			    android:top="1dp"
			    android:bottom="1dp"/>
			<solid android:color="@color/button_select"/>
		</shape>
	 </item>
     <item>
		<shape>
			<stroke 
			    android:width="1dp" 
			    android:color="@color/button_stroke"/>
			<corners 
			    android:radius="7dp" />
			<padding 
			    android:left="1dp"
			    android:right="1dp"
			    android:top="1dp"
			    android:bottom="1dp"/>
			<solid android:color="@color/button"/>
		</shape>
     </item>
</selector>
