<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
                android:startColor="@color/progress_background"
                android:centerColor="@color/progress_background"
                android:endColor="@color/progress_background"
        />
    </shape>
</item>
<item
    android:id="@android:id/progress">
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="@color/condition"
                android:centerColor="@color/condition"
                android:endColor="@color/condition"
        />
        </shape>
    </clip>
</item>
</layer-list>