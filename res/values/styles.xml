<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <!-- style texts -->
    <style name="textview_story">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="textview_gameover">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gameover_color</item>
        <item name="android:layout_margin">20dp</item>
    </style>
	<style name="line">
	    <item name="android:layout_height">2dip</item>
	    <item name="android:background">@color/line_color</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:layout_marginRight">10dp</item>
	</style>
	<style name="line_light">
	    <item name="android:layout_height">1dip</item>
	    <item name="android:background">@color/line_light_color</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	</style>
    <style name="textview_options">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/options_color</item>
    </style>

    <style name="textview_anchor">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/anchor_color</item>
    </style>

    <style name="textview_bonus">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/attr_color</item>
    </style>
	<style name="textview_debuff">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/debuf_color</item>
    </style>
    <style name="textview_battlenumber">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/attrName_color</item>
    </style>
    <style name="textview_attrName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/attrName_color</item>
    </style>

    <style name="textview_attrValue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/attr_color</item>
    </style>

    <!-- atrributes changing by game -->
    <style name="textview_default_attribute">
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/attrName_color</item>
    </style>
    <style name="textview_neutral_attribute">
        <item name="android:gravity">right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/attrName_color</item>
    </style>
</resources>