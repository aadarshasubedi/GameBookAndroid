<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/character_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/corners_">

    <Button
        android:id="@+id/result_button"
        style="@style/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sg_continue" />

<!--     <TextView -->
<!--         android:id="@+id/textView1" -->
<!--         style="@style/title" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_alignLeft="@+id/battleLogScrollView" -->
<!--         android:layout_below="@+id/tableLayout1" -->
<!--         android:text="@string/log" /> -->

    <ViewFlipper
        android:id="@+id/viewSwitcher1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableLayout1"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

    </ViewFlipper>

    <TableLayout
        android:id="@+id/tableLayout1"
        style="@style/section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/actualStats"
        android:background="@drawable/_background_corners"
        android:layout_marginBottom="1dp"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.nex.gamebook.playground.SkillsSpinner
                android:id="@+id/skills"
                style="@style/spinner_skills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:divider="@android:color/transparent"
                android:dividerHeight="5sp"
                android:dropDownVerticalOffset="-50dp"
                android:gravity="left"
                android:popupBackground="@drawable/spinner"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
				
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_marginRight="5dp"
                style="@style/attribute"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level" />

            <TextView
                 android:layout_marginRight="5dp"
                android:id="@+id/level"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/attribute"
                android:layout_marginRight="5dp"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experience" />

            <com.nex.gamebook.playground.TextProgressBar
                android:id="@+id/experience_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/attribute"
                android:id="@+id/sel_l_health_d"
                android:layout_marginRight="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_health" />

            <com.nex.gamebook.playground.TextProgressBar
                android:id="@+id/p_health_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="15dp" />

        </LinearLayout>

        

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sel_l_skillpower_d"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="@string/attr_skill_power" />

            <TextView
                android:id="@+id/skill_power"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sel_l_attack_d"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/attr_attack" />

            <TextView
                android:id="@+id/sel_attr_attack"
                style="@style/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/sel_attr_baseDmg_d"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sel_l_skill_d"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_skill" />

            <TextView
                android:id="@+id/sel_attr_skill"
                style="@style/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/attr_value_zero" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sel_l_defense_d"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/attr_defense" />

            <TextView
                android:id="@+id/sel_attr_defense"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/attr_value_zero" />

            <TextView
                android:id="@+id/textView13"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/sel_l_def_perc"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                android:id="@+id/textView12"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%" />

            <TextView
                android:id="@+id/textView11"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sel_l_luck_d"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_luck" />

            <TextView
                android:id="@+id/sel_attr_luck"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/attr_value_zero" />

            <TextView
                android:id="@+id/luck_perc"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%" />

            <TextView
                android:id="@+id/textView9"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/attr_critical" />

            <TextView
                android:id="@+id/critical"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100" />

            <TextView
                android:id="@+id/p"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%" />
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="left">

				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="left" >

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/hot"
				        android:textColor="@color/positive" />

				    <TextView
				        android:id="@+id/player_hots"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="x" />

				    <TextView
				        android:id="@+id/player_longest_hot"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:text="@string/dot"
				        android:textColor="@color/positive" />

				    <TextView
				        android:id="@+id/player_dots"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="x" />

				    <TextView
				        android:id="@+id/player_longest_dot"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />
				</LinearLayout>

				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:gravity="right" >

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/b"
				        android:textColor="@color/positive" />

				    <TextView
				        android:id="@+id/player_buffs"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="x" />

				    <TextView
				        android:id="@+id/player_longest_buff"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:text="@string/d"
				        android:textColor="@color/positive" />

				    <TextView
				        android:id="@+id/player_debuffs"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="x" />

				    <TextView
				        android:id="@+id/player_longest_debuff"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />
				</LinearLayout>

        </LinearLayout>
    </TableLayout>

    <TextView
        style="@style/title"
        android:layout_marginRight="10dp"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout1"
        android:layout_alignLeft="@+id/tableLayout1"
        android:text="@string/attributes" />

    <TextView
        android:id="@+id/actualStats"
        android:layout_marginRight="10dp"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:gravity="center_horizontal"
        android:text="@string/actual_stats" />

    <TextView
        android:id="@+id/base_stats"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout1"
        android:layout_toRightOf="@+id/actualStats"
        android:text="@string/base_stats" />

</RelativeLayout>