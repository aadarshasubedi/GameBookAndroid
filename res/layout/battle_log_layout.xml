<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/background_color" android:orientation="vertical">

    <TextView
        android:id="@+id/enemy"
        style="@style/textview_enemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="@string/dsc_default" />
	<TableLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

		<TableRow
		    android:id="@+id/tableRow1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >

		    <TableLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >

		        <TableRow
		            android:id="@+id/tableRow3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/health_name"
		                style="@style/textview_debuff"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:gravity="left"
		                android:text="@string/attr_health" />

		            <TextView
		                android:id="@+id/health"
		                style="@style/textview_battlenumber"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/attr_value_zero" />

		            <TextView
		                android:id="@+id/attack_name"
		                style="@style/textview_debuff"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:gravity="left"
		                android:text="@string/attr_attack" />

		            <TextView
		                android:id="@+id/attack"
		                style="@style/textview_battlenumber"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/attr_value_zero" />
		        </TableRow>

		        <TableRow
		            android:id="@+id/tableRow4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/defense_name"
		                style="@style/textview_debuff"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:gravity="left"
		                android:text="@string/attr_defense" />

		            <TextView
		                android:id="@+id/defense"
		                style="@style/textview_battlenumber"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/attr_value_zero" />

		            <TextView
		                android:id="@+id/skill_name"
		                style="@style/textview_debuff"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:gravity="left"
		                android:text="@string/attr_skill" />

		            <TextView
		                android:id="@+id/skill"
		                style="@style/textview_battlenumber"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/attr_value_zero" />
		        </TableRow>

		        <TableRow
		            android:id="@+id/tableRow5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		        </TableRow>

		        <TableRow
		            android:id="@+id/tableRow6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/luck_name"
		                style="@style/textview_debuff"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:gravity="left"
		                android:text="@string/attr_luck" />

		            <TextView
		                android:id="@+id/luck"
		                style="@style/textview_battlenumber"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/attr_value_zero" />
		        </TableRow>
		    </TableLayout>
		   
		</TableRow>

	</TableLayout>
	<View
	    style="@style/line_light"
	    android:layout_width="wrap_content" android:visibility="gone"/>

	<Button
	    android:id="@+id/fight"
	    style="@style/textview_options"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/button_fight" />

</LinearLayout>