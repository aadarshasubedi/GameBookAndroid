<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
  
    
    android:layout_width="match_parent"
    android:layout_height="match_parent" style="@style/section">

    <TextView
        android:id="@+id/stat_title"
        style="@style/attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/dsc_default" />

    <TextView
        android:id="@+id/stat_summary"
        style="@style/number"
        android:textColor="@color/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stat_title"
        android:layout_below="@+id/stat_title"
        android:text="@string/dsc_default" />

</RelativeLayout>
