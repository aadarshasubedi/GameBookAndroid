<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/enemy_name"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dsc_default" />

   <TableLayout
       android:id="@+id/tableLayout1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/_background_corners"
       android:padding="10dp" >
		<LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" >

               <com.nex.gamebook.playground.SkillsSpinner
                   android:id="@+id/enemy_skills"
                   style="@style/spinner_skills"
                   android:layout_width="0dp"
                   android:layout_marginLeft="5dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="1dp"
                   android:layout_weight="1"
                   android:divider="@android:color/transparent"
                   android:dividerHeight="5sp"
                   android:dropDownVerticalOffset="-50dp"
                   android:popupBackground="@drawable/spinner"
                   android:spinnerMode="dropdown" />

               
           </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               style="@style/attribute"
               android:id="@+id/textView1"
               android:layout_marginRight="5dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/attr_health" />

           <com.nex.gamebook.playground.TextProgressBar
               android:id="@+id/enemy_health_bar"
               style="?android:attr/progressBarStyleHorizontal"
               android:layout_width="match_parent"
               android:layout_marginTop="4dp"
               android:layout_height="15dp" />

       </LinearLayout>

       <TableRow
           android:id="@+id/tableRow0"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/sel_l_skillpower_d"
               style="@style/attribute"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dip"
               android:text="@string/attr_skill_power" />

           <TextView
               android:id="@+id/enemy_skill_power"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/attr_value_zero" />

           <TextView
               android:id="@+id/textView8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/enemy_l_attack"
               style="@style/attribute"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dip"
               android:text="@string/attr_attack" />

           <TextView
               android:id="@+id/enemy_attr_attack"
               style="@style/number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="@string/attr_value_zero" />
            <TextView
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/enemy_sel_attr_baseDmg_d"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
       </TableRow>

       <TableRow
           android:id="@+id/tableRow3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/enemy_l_skill"
               style="@style/attribute"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/attr_skill" />

           <TextView
               android:id="@+id/enemy_attr_skill"
               style="@style/number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="@string/attr_value_zero" />

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/enemy_l_defense"
               style="@style/attribute"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dip"
               android:text="@string/attr_defense" />

           <TextView
               android:id="@+id/enemy_attr_defense"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="@string/attr_value_zero" />

           <TextView
               android:id="@+id/textView9"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="(" />

           <TextView
               android:id="@+id/enemy_l_def_perc"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/attr_value_zero" />

           <TextView
               android:id="@+id/textView7"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="%" />

           <TextView
               android:id="@+id/textView10"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=")" />
       </TableRow>

       <TableRow
           android:id="@+id/tableRow5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/enemy_l_luck"
               style="@style/attribute"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/attr_luck" />

           <TextView
               android:id="@+id/enemy_attr_luck"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="@string/attr_value_zero" />

           <TextView
               android:id="@+id/textView6"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="%" />

           <TextView
               android:id="@+id/textView15"
               style="@style/attribute"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dip"
               android:text="@string/attr_critical" />

           <TextView
               android:id="@+id/enemy_critical"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="100" />

           <TextView
               android:id="@+id/p"
               style="@style/number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="%" />
       </TableRow>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" android:layout_marginBottom="5dip" android:gravity="left">

           
			<LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="left" >

            <TextView
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hot"
                android:textColor="@color/positive" />

            <TextView
                android:id="@+id/enemy_hots"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x" />
            <TextView
                android:id="@+id/enemy_longest_hot"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/attribute"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textColor="@color/positive" />

            <TextView
                android:id="@+id/enemy_dots"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />

            <TextView
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x" />
            <TextView
                android:id="@+id/enemy_longest_dot"
                style="@style/attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attr_value_zero" />
        </LinearLayout>
        <LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:gravity="right" >

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/b"
				        android:textColor="@color/positive" />

				    <TextView
				        android:id="@+id/enemy_buffs"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="x" />

				    <TextView
				        android:id="@+id/enemy_longest_buff"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:text="@string/d"
				        android:textColor="@color/positive" />

				    <TextView
				        android:id="@+id/enemy_debuffs"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />

				    <TextView
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="x" />

				    <TextView
				        android:id="@+id/enemy_longest_debuff"
				        style="@style/attribute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/attr_value_zero" />
				</LinearLayout>
       </LinearLayout>

       <Button
           android:id="@+id/fight"
           style="@style/button"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="0dp"
           android:text="@string/button_fight" />

       <ScrollView
           android:id="@+id/e_battleLogScrollView"
           style="@style/spinner_skills"
           android:layout_width="fill_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="1dp"
           android:background="@drawable/_background_corners"
           android:padding="10dip"
           android:visibility="gone" >

           <LinearLayout
               android:id="@+id/e_battle_log"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical" >
           </LinearLayout>
       </ScrollView>

   </TableLayout>

</LinearLayout>