<story name="@string/story_zombie_apocalypse">

   	<characters>
   	    <character position="3" id="1" name="@string/s1_ch_soldier" description="@string/s1_dsc_soldier">
   	        <health>3</health>
   	        <defense>4</defense>
   	        <skill>2</skill>
   	        <luck>2</luck>
   	    </character>
   	</characters>
   	
	<sections>
	    <!-- enemiesDefeatedText atrribute must exist when enemies exists -->
	    <section position="3" text="@string/s1_section3" enemiesDefeatedText="@string/s1_section3_cleared" luckText="@string/fight_luck_section">
	        <bonuses>
	            <bonus type="defense" value="1" debuff="true" state="before_fight" />
	            <bonus type="luck" value="3" overflowed="true" state="after_fight" />
	        </bonuses>
	        <enemies>
	            <enemy attack="4" skill="5" name="@string/s1_enemy_zombie" fightWithoutDamageText="" />
	            <enemy attack="2" skill="4" name="@string/s1_enemy_zombie" fightWithDamageText=""/>
	            <enemy attack="6" skill="2" name="@string/s1_enemy_zombie" fightSkillText=""/>
	            <enemy attack="6" skill="2" name="@string/s1_enemy_zombie" fightLoseText=""/>
	            <enemy attack="6" skill="2" name="@string/s1_enemy_zombie" fightLuckText=""/>
	        </enemies>
	        <options>
	            <option section="2" text="@string/sg_continue"/>
	        </options>
	    </section>
	    
	    <!-- bonus section -->
	    <section position="2" text="@string/s1_section3" enemiesDefeatedText="@string/s1_section3_cleared" luckText="@string/fight_luck_section">
	        <bonuses>
	            <bonus type="defense" value="1" debuff="true"/>
	            <bonus type="luck" value="3" overflowed="true"/>
	        </bonuses>
	        <options>
	            <option section="3" text="@string/sg_continue"/>
	        </options>
	    </section>
	    
	    <!-- endGame section -->
	    <section position="2" text="@string/s1_section3" endGame="true" />
	    
    </sections>
</story>